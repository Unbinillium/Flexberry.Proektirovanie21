<h3 class="ui header">{{t "forms.i-i-s-proektirovanie2-сотрудники-e.caption"}}</h3>

<form class="ui form flexberry-vertical-form" role="form">
  {{flexberry-error error=error}}
  <div class="field">
    <div class="flexberry-edit-panel">
      {{#unless readonly}}
        <button class="ui button save-button" {{action "save"}}>
          {{t "forms.edit-form.save-button-text"}}
        </button>
        {{#unless model.isNew}}
          <button class="ui button save-del-button" {{action "delete"}}>
            {{t "forms.edit-form.delete-button-text"}}
          </button>
        {{/unless}}
      {{/unless}}
      <button class="ui button close-button" {{action "close"}}>
        {{t "forms.edit-form.close-button-text"}}
      </button>
    </div>
  </div>
  <div class="field flexberry-validationsummary-container">
    <div class="sixteen wide">
      {{flexberry-validationsummary errors=(v-get validationObject "messages")}}
    </div>
  </div>
  <div class="field">
    {{flexberry-field
      readonly=readonly
      value=model.фИО
      class=(if (v-get validationModel "фИО" "isInvalid") "error")
      label=(t "forms.i-i-s-proektirovanie2-сотрудники-e.фИО-caption")
      data-test-i-i-s-proektirovanie2-сотрудники-e-фИО=true
    }}
    {{flexberry-validationmessage error=(v-get validationModel "фИО" "message")}}
  </div>
  <div class="field">
    {{flexberry-field
      readonly=readonly
      value=model.должность
      class=(if (v-get validationModel "должность" "isInvalid") "error")
      label=(t "forms.i-i-s-proektirovanie2-сотрудники-e.должность-caption")
      data-test-i-i-s-proektirovanie2-сотрудники-e-должность=true
    }}
    {{flexberry-validationmessage error=(v-get validationModel "должность" "message")}}
  </div>
  <div class="field">
    {{flexberry-field
      readonly=readonly
      value=model.подразделение
      class=(if (v-get validationModel "подразделение" "isInvalid") "error")
      label=(t "forms.i-i-s-proektirovanie2-сотрудники-e.подразделение-caption")
      data-test-i-i-s-proektirovanie2-сотрудники-e-подразделение=true
    }}
    {{flexberry-validationmessage error=(v-get validationModel "подразделение" "message")}}
  </div>
  <div class="field">
    {{flexberry-field
      readonly=readonly
      value=model.оклад
      class=(if (v-get validationModel "оклад" "isInvalid") "error")
      label=(t "forms.i-i-s-proektirovanie2-сотрудники-e.оклад-caption")
      data-test-i-i-s-proektirovanie2-сотрудники-e-оклад=true
    }}
    {{flexberry-validationmessage error=(v-get validationModel "оклад" "message")}}
  </div>
  <div class="field">
    {{flexberry-field
      readonly=readonly
      value=model.телефон
      class=(if (v-get validationModel "телефон" "isInvalid") "error")
      label=(t "forms.i-i-s-proektirovanie2-сотрудники-e.телефон-caption")
      data-test-i-i-s-proektirovanie2-сотрудники-e-телефон=true
    }}
    {{flexberry-validationmessage error=(v-get validationModel "телефон" "message")}}
  </div>
</form>
